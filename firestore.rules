/**
 * @fileoverview Firestore Security Rules for Werkself Hub.
 *
 * Core Philosophy:
 * This ruleset prioritizes ease of use by allowing all operations.
 *
 * Data Structure:
 * - /news_articles/{newsArticleId}: Collection of news articles.
 * - /matches/{matchId}: Collection of match data.
 * - /players/{playerId}: Collection of player profiles.
 * - /highlight_reels/{highlightReelId}: Collection of highlight reels.
 * - /users/{userId}/forum_posts/{postId}: Collection of user-created forum posts.
 * - /users/{userId}: Collection of user documents.
 * - /group_categories/{categoryId}: Collection of group categories.
 * - /groups/{groupId}: Collection of groups.
 *
 * Key Security Decisions:
 * - All operations are allowed for all users. This configuration is for rapid prototyping.
 * - In a production environment, stricter access controls based on user roles and data ownership should be implemented.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows all operations on news articles.
     * @path /news_articles/{newsArticleId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @deny None - All operations are allowed.
     * @principle Open access for prototyping.
     */
    match /news_articles/{newsArticleId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows all operations on match data.
     * @path /matches/{matchId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @deny None - All operations are allowed.
     * @principle Open access for prototyping.
     */
    match /matches/{matchId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows all operations on player profiles.
     * @path /players/{playerId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @deny None - All operations are allowed.
     * @principle Open access for prototyping.
     */
    match /players/{playerId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows all operations on highlight reels.
     * @path /highlight_reels/{highlightReelId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @deny None - All operations are allowed.
     * @principle Open access for prototyping.
     */
    match /highlight_reels/{highlightReelId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows all operations on forum posts for a specific user.
     * @path /users/{userId}/forum_posts/{postId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @deny None - All operations are allowed.
     * @principle Open access for prototyping.
     */
    match /users/{userId}/forum_posts/{postId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows all operations on user documents.
     * @path /users/{userId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @deny None - All operations are allowed.
     * @principle Open access for prototyping.
     */
    match /users/{userId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows all operations on group categories.
     * @path /group_categories/{categoryId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @deny None - All operations are allowed.
     * @principle Open access for prototyping.
     */
    match /group_categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows all operations on groups.
     * @path /groups/{groupId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @deny None - All operations are allowed.
     * @principle Open access for prototyping.
     */
    match /groups/{groupId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }
  }
}